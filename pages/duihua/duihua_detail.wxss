/* pages/duihua/duihua_detail.wxss */

page {
  background: #f5f5f5;
}

.list {
  width: 100%;
}

.item {
  width: 100%;
}

.item-wrapper {
  margin-top: 30rpx;
  margin-left: 30rpx;
  width: 690rpx;
  border-radius: 10rpx;
  background: #fff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.sub-item-info {
  font-size: 26rpx;
  color: #000;
  flex-wrap: wrap;
}

.sub-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.copy {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 40rpx;
}

.sex {
  width: 23rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.desp {
  width: 560rpx;
  margin-left: 10rpx;
}

.more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  border-top: solid #f0f0f0 1px;
  background: rgba(0, 0, 0, 0);
}

.more-loadend {
  color: #ddd;
}
