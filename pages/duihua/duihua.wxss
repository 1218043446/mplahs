/* pages/duihua/duihua.wxss */
page {
  background: #f5f5f5;
}
.list {
   width: 100%;
}

.item {
   width: 100%;
}

.item-wrapper {
   margin-top: 30rpx;
   margin-left: 30rpx;
   width: 690rpx;
   border-radius: 10rpx;
   background: #fff;
}

.sub-item-info {
   display: flex;
   flex-direction: row;
   align-items: center;
   font-size: 26rpx;
   color: #000;
   flex-wrap: wrap;
}

.sub-item {
   width: 33.3%;
   text-align: center;
   padding-top: 30rpx;
   padding-bottom: 30rpx;
}

.top-header {
  margin-top: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  }

.top-header-bg {
  background: #fd445c;
  height: 100%;
  width: 8rpx;
}

.top-header-title {
  height: 100%;
  line-height: 100%;
  margin-left: 10rpx;
}

.more {
  width: 100%;
  height: 30rpx;

}

