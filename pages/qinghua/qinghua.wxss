/* pages/qinghua/qinghua.wxss */

.header-bg {
  width: 100%;
  height: 260rpx;
  background: #fff;
}

.header-bg image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690rpx;
  height: 100%;
}

.top-header {
  margin-top: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.top-header-bg {
  background: #fd445c;
  height: 100%;
  width: 8rpx;
}

.top-header-title {
  height: 100%;
  line-height: 100%;
  margin-left: 10rpx;
}

.list {
   width: 100%;
}

.item {
   width: 100%;
   margin-bottom: 30rpx;
}

.name {
   margin-left: 30rpx;
   width: 570rpx;
   background: #f5f5f5;
   color: #000;
   font-size: 28rpx;
   padding-left: 60rpx;
   padding-right: 60rpx;
   height: 100rpx;
   line-height: 100rpx;
   border-radius: 60rpx;
}

.more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0);
}

.more-loadend {
  color: #ddd;
}
