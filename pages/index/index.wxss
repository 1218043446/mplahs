/**index.wxss**/

.header {
  width: 100%;
}

.header image {
  width: 100%;
  height: 453rpx;
}

.header .search {
  width: 690 rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: -50rpx;
  border: solid 1rpx #eee;
  border-radius: 40rpx;
  background: #fff;
  box-shadow: 0px 5px 2px rgba(0, 0, 0, 0.02);
  z-index: 10;
  position: relative;
}

.search view {
  line-height: 80rpx;
  padding-left: 50rpx;
  color: #999;
  font-size: 30rpx;
}

.search image {
  width: 36rpx;
  height: 36rpx;
  line-height: 80rpx;
  position: absolute;
  right: 40rpx;
  top: 22rpx;
}

.top-header {
  margin-top: 60rpx;
  height: 30rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}

.top-header-bg {
  background: #fd445c;
  height: 100%;
  width: 8rpx;
}

.top-header-title {
  height: 100%;
  line-height: 100%;
  margin-left: 10rpx;
}

.top-menu {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690px;
  margin-top: 40rpx;
}

.top-menu-left {
  width: 400rpx;
}

.top-menu-left > image {
  width: 380rpx;
  height: 390rpx;
}

.top-menu-right {
  width: 280rpx;
  margin-left: 10rpx;
}

.top-menu-right > image {
  width: 280rpx;
  height: 180rpx;
}

.choice-header {
  margin-top: 40rpx;
}

.choice-list {
  width: 100%;
  margin-top: 30rpx;
}

.choice-item {
   width: 100%;
   padding: 30rpx;
   border-bottom: solid #f5f5f5 1px;
   font-size: 30rpx;
   display: flex;
   flex-direction: row;
}

.choice-item image {
   height: 120rpx;
   width: 200rpx;
   overflow: hidden;
}

.choice-item-content {
   width: 480rpx;
   margin-left: 30rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
}

.choice-item-content-warrper {
   display: flex;
   flex-direction: row;
   margin-top: 20rpx;
   width: 100%;
   position: relative;
}

.choice-item-content-title {
    margin-right: 30rpx;
    height: 34rpx;
    overflow: hidden;
}

.choice-item-content-like-count {
    color: #b1b1b1;
    font-size: 24rpx;
}

.choice-item-content-tag {
   height: 40rpx;
   line-height: 40rpx;
   padding-left: 16rpx;
   padding-right: 16rpx;
   background: #70adf9;
   border-radius: 20rpx;
   position: absolute;
   font-size: 26rpx;
   right: 30rpx;
   top: -10rpx;
   color: #fff;
}

.choice-more {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
}

.choice-more-loadend {
  color: #ddd;
}