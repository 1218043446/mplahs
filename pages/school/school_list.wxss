/* pages/school/school_list.wxss */

scroll-view {
  white-space: nowrap;
  position: fixed;
  height: 60rpx;
  left: 0;
  top: 0;
  background: #fff;
  border-bottom: solid 1px #ddd;
  
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.menu-item-wrapper {
  display: inline-block;
}

.menu-item {
  font-size: 26rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menu-name {
  padding-top: 10rpx;
  padding-bottom: 5rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
}

.selected {
  color: #000;
  font-size: 30rpx;
}

.selected .menu-tag {
  height: 6rpx;
  width: 30rpx;
  background: #fd445c;
}

.item {
  padding: 30rpx;
  border-bottom: solid 1px #ddd;
}

.name {
  color: #000;
  font-size: 30rpx;
}

.like {
  color: #999;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
}

.more-loadend {
  color: #ddd;
}
