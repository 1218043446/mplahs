/* pages/school/school.wxss */

page {
  background: #f5f5f5;
}

.header-bg {
  width: 100%;
  height: 350rpx;
  background: #fff;
}

.header-bg image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690rpx;
  height: 100%;
}

.category-list {
  display: flex;
  flex-direction: row;
  height: 180rpx;
  background: #fff;
}

.article-category-item {
  background: #fff;
}

.category-item {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.category-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.top-header {
  margin-top: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.top-header-bg {
  background: #fd445c;
  height: 100%;
  width: 8rpx;
}

.top-header-title {
  height: 100%;
  line-height: 100%;
  margin-left: 10rpx;
}

.article-category-sub-item-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 30rpx;
  color: #000;
}

.article-category-sub-item {
  width: 50%;
  margin-bottom: 30rpx;
}

.article-category-sub-item-info-wrapper {
  color: #fff;
  position: relative;
  width: 335rpx;
  height: 200rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.article-category-sub-item-info-wrapper2 {
  margin-left: 10rpx;
  margin-right: 30rpx;
}

.article-category-sub-item-info-wrapper image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 10rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
}

.name {
  font-size: 36rpx;
  position: relative;
  z-index: 3;
}

.article-category-sub-item-desp {
   margin-left: 30rpx;
   font-size: 26rpx;
   margin-right: 10rpx;
}

.article-category-sub-item-desp2 {
   margin-left: 10rpx;
   font-size: 26rpx;
   margin-right: 30rpx;
}